<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_4"
    android:layout_marginTop="@dimen/dim_4"
    android:layout_marginEnd="@dimen/dim_4"
    android:background="@null"
    app:dragEdge="left"
    app:mode="same_level">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dim_100"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <ImageButton
        android:id="@+id/item_donation_img_info"
        android:layout_width="@dimen/dim_40"
        android:background="@drawable/circle_red"
        android:layout_height="@dimen/dim_40"
        android:src="@drawable/ic_info"
        android:layout_margin="3dp"
        />
    <ImageButton
        android:id="@+id/item_donation_img_call"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:background="@drawable/orange_shape"
        android:src="@drawable/ic_call_white"/>

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginStart="-50dp"
            android:background="@drawable/item_donation_bg"
            android:layout_toEndOf="@+id/item_donation_tv_blood_type"
            android:orientation="vertical"
            >
<TextView
    android:id="@+id/item_donation_tv_name"
    style="@style/item_donation_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/item_donation_tv_adress"
    style="@style/item_donation_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/item_donation_tv_city"
    style="@style/item_donation_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_donation_tv_blood_type"
            android:layout_width="@dimen/dim_100"
            android:layout_height="@dimen/dim_100"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#ffff"/>
    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>