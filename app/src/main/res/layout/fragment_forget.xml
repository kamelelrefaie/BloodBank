<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_forget_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:src="@drawable/login_logo"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_forget_ti_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/fragment_forget_img"
                android:layout_margin="16dp"
                android:background="@drawable/login_round"

                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dim_8"
                    android:background="@null"
                    android:hint="phone"
                    android:inputType="phone"
                    android:textColorHint="@color/colorPrimaryDark" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/fragment_forget_but_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_forget_ti_phone"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_but"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>