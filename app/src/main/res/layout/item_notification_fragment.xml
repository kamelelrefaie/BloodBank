<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_notification_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_8"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/dim_8"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_notifications_red"

        />

    <TextView
        android:id="@+id/item_notification_tv_titlr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_8"
        android:layout_marginEnd="@dimen/dim_8"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_toEndOf="@id/item_notification_img"
        android:layout_toStartOf="@+id/item_notification_tv_time"

        />

    <TextView
        android:id="@+id/item_notification_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_access_time_orange"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dim_8"
        android:layout_marginStart="@dimen/dim_8"
        android:textColor="@color/orange"/>


</RelativeLayout>