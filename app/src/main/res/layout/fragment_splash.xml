<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_splash_top_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_t" />

    <ImageView
        android:id="@+id/fragment_splash_img_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_splash_img_logo"
        android:layout_centerInParent="true"
        android:fontFamily="@font/shekari_font"
        android:paddingTop="16dp"
        android:paddingRight="36dp"
        android:text="بنك الدم"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/fragment_splash_img_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="-20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_b" />

</RelativeLayout>